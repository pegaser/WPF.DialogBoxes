<Window x:Class="CommonDialogBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonDialogBoxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="btnOpenFile" Click="btnOpenFile_Click">Open File Dialog Box</Button>
        <Button x:Name="btnSaveFile" Click="btnSaveFile_Click">Save File Dialog Box</Button>
        <Button x:Name="btnConfigurePrinter" Click="btnConfigurePrinter_Click">Configure Printer</Button>
    </StackPanel>
</Window>
